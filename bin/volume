#!/bin/bash

if [[ "$1" == "up" ]]; then
  for sink in $(pactl list sinks | grep Sink | cut -d"#" -f2); do
    pactl set-sink-volume "$sink" +5%
  done
elif [[ "$1" == "down" ]]; then
  for sink in $(pactl list sinks | grep Sink | cut -d"#" -f2); do
    pactl set-sink-volume "$sink" -5%
  done
else
  echo "Unsupported usage"
fi
