mode "resize" {
  bindsym h resize grow left 10 px or 10 ppt
  bindsym j resize grow down 10 px or 10 ppt
  bindsym k resize grow up 10 px or 10 ppt
  bindsym l resize grow right 10 px or 10 ppt

  bindsym Shift+h resize shrink right 10 px or 10 ppt
  bindsym Shift+j resize shrink up 10 px or 10 ppt
  bindsym Shift+k resize shrink down 10 px or 10 ppt
  bindsym Shift+l resize shrink left 10 px or 10 ppt

  bindsym Control+h resize grow left 1 px or 1 ppt
  bindsym Control+j resize grow down 1 px or 1 ppt
  bindsym Control+k resize grow up 1 px or 1 ppt
  bindsym Control+l resize grow right 1 px or 1 ppt

  bindsym Control+Shift+h resize shrink right 1 px or 1 ppt
  bindsym Control+Shift+j resize shrink up 1 px or 1 ppt
  bindsym Control+Shift+k resize shrink down 1 px or 1 ppt
  bindsym Control+Shift+l resize shrink left 1 px or 1 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "resetdpi" {
  bindsym i exec /home/jdwyer/dotfiles/bin/set_dpi 100
  bindsym o exec /home/jdwyer/dotfiles/bin/set_dpi 175
  bindsym Return mode "default"
  bindsym Escape mode "default"

}

